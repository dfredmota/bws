<%- model_class = Funcao -%>
<div class="page-header" style="border: none">
  <h3><%=  I18n.t('activerecord.models.funcao') %></h3>
  <hr/>
  <%= link_to "Novo", new_funcao_path, class: 'btn btn-primary' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
       <th><%= model_class.human_attribute_name(:descricao) %></th>
      <th width="10%">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @funcoes.each do |funcao| %>
      <tr>
        <td><%= funcao.descricao %></td>
        <td>
          <%= link_to  I18n.t('.edit', default: I18n.t("helpers.links.edit")), edit_funcao_path(funcao), class: 'btn btn-mini' %>
          <%= link_to I18n.t('.destroy', default: I18n.t("helpers.links.destroy")), funcao, method: :delete, data: { confirm:  I18n.t('.confirm', default:  I18n.t("helpers.links.confirm", default: 'Tem certeza?')) }, class: 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>