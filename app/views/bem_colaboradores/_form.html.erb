<%= form_for(bem_colaborador, html: { class: 'form-horizontal' }) do |f| %>
    <div class="form-group">
      <%= f.label :bem_id, 'Item', class: 'col-sm-2 control-label' %>
      <div class="col-sm-5">
        <%= f.select :bem_id, Bem.to_dropdown, { include_blank: true }, {:class => 'form-control'}  %>
        <%=f.error_span(:bem_id) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :colaborador_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-5">
        <%= f.select :colaborador_id, Colaborador.to_dropdown, { include_blank: true }, {:class => 'form-control'}  %>
        <%=f.error_span(:colaborador_id) %>
      </div>
    </div>
  <div class="form-group">
    <%= f.label :quantidade, class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.number_field :quantidade, :class => 'form-control' %>
      <%=f.error_span(:quantidade) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary btn-sm', data: { tooltip: true, placement: 'top', animation: true }, title: 'Salvar registro' %>
      <%= link_to I18n.t('.cancel', default: I18n.t("helpers.links.cancel")), bem_colaboradores_path, class: 'btn btn-default btn-sm', data: { tooltip: true, placement: 'top', animation: true }, title: "Retorna para listagem" %>
    </div>
  </div>
<% end %>
