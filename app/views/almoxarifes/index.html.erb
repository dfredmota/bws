<%- model_class = Almoxarife -%>
<div class="page-header" style="border: none">
  <h3><%=  I18n.t('activerecord.models.almoxarife') %></h3>
  <hr/>
  <%= link_to "Novo", new_almoxarife_path, class: 'btn btn-primary' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
       <th><%= model_class.human_attribute_name(:colaborador_id) %></th>
       <th><%= model_class.human_attribute_name(:centro_custo_id) %></th>
      <th width="10%">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @almoxarifes.each do |almoxarife| %>
      <tr>
        <td><%= almoxarife.colaborador %></td>
        <td><%= almoxarife.centro_custo %></td>
        <td>
          <%= link_to  I18n.t('.edit', default: I18n.t("helpers.links.edit")), edit_almoxarife_path(almoxarife), class: 'btn btn-mini' %>
          <%= link_to I18n.t('.destroy', default: I18n.t("helpers.links.destroy")), almoxarife, method: :delete, data: { confirm:  I18n.t('.confirm', default:  I18n.t("helpers.links.confirm", default: 'Tem certeza?')) }, class: 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
