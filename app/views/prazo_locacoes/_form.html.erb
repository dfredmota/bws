<%= form_for(prazo_locacao, html: { class: 'form-horizontal' }) do |f| %>
  <%= render 'layouts/error_messages', model_name: prazo_locacao %>
  <div class="form-group">
    <%= f.label :descricao, class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :descricao, :class => 'form-control',:required => true  %>
    </div>
  </div>
    <div class="form-group">
      <%= f.label :qtd_dias, class: 'col-sm-2 control-label' %>
      <div class="col-sm-1">
        <%= f.text_field :qtd_dias, :class => 'form-control',:required => true  %>
      </div>
    </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to I18n.t('.cancel', default: I18n.t("helpers.links.cancel")),
                  prazo_locacoes_path, class: 'btn' %>
    </div>
  </div>
<% end %>
