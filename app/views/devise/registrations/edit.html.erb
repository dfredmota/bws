<h2>Editar suas informações</h2>

<%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put, class: 'form-horizontal' }) do |f| %>
  <%= render partial: 'the_notification/form', locals: { object: resource, format: :json } %>

    <div class="form-group">
      <%= f.label :nome, class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :nome, placeholder: "Nome Completo", class: "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :login, class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :login, placeholder: "Usuário", class: "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group has-error has-feedback">
      <%= f.label :current_password, class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= f.password_field :current_password, autocomplete: "off", placeholder: 'Informe a Senha Atual para salvar as alterações', class: "form-control", data: { tooltip: true, placement: 'right' }, title: 'Obrigatório' %>
        <span class="form-control-feedback" aria-hidden="true"></span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Nova senha, deixe em branco se não quiser alterar', class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirmação de Nova Senha', class: "form-control" %>
      </div>
    </div>

    </p>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit nil, class: 'btn btn-primary' %>
        <%= link_to I18n.t('.cancel', default: I18n.t("helpers.links.cancel")),
                    root_path, class: 'btn btn-default' %>
      </div>
    </div>
<% end %>

