<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post, class: 'form-signin' }) do |f| %>
    <%= devise_error_messages! %>
    <h2 class="form-signin-heading">Novo Usuário</h2>
    <%= f.label :nome %>
    <%= f.text_field :nome, autofocus: true, placeholder: "Nome", class: "form-control", required: true %>

    <%= f.label :login %>
    <%= f.text_field :login, placeholder: "Usuário", class: "form-control", required: true %>

    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Email", class: "form-control", required: true %>

    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Senha", class: "form-control", required: true %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmação de Senha", class: "form-control", required: true %>

    <div class="actions">
      <%= f.submit "Salvar", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>