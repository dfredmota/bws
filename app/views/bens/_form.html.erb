<%= form_for(bem, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: bem %>
  <%= render partial: 'the_notification/form', locals: { object: bem, format: :json } %>
  <div class="form-group">
    <%= f.label :tipo_bem_id, 'Tipo de Item', class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= f.select :tipo_bem_id, TipoBem.to_dropdown, { include_blank: true }, {:class => 'form-control'}  %>
      <%=f.error_span(:tipo_bem_id) %>
    </div>
    <%= f.label :insumo_id, class: 'col-sm-1 control-label' %>
    <div class="col-sm-2">
      <%= f.select :insumo_id, Insumo.to_dropdown, { include_blank: true }, {:class => 'form-control'}  %>
      <%=f.error_span(:insumo_id) %>
    </div>
  </div>
  <div class="section-patrimonio">
    <div class="form-group">
      <%= f.label :patrimonio, class: 'col-sm-2 control-label' %>
      <div class="col-sm-2">
        <%= f.number_field :patrimonio, value: bem.patrimonio.try(:to_i), :class => 'form-control'  %>
        <%=f.error_span(:patrimonio) %>
      </div>
      <div class="col-sm-1">
        <%= button_tag 'Gerar Número', class: 'btn btn-default', id: 'btn-gera-patrimonio', type: 'button' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :marca, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= f.text_field :marca, :class => 'form-control'  %>
      <%=f.error_span(:marca) %>
    </div>
    <%= f.label :modelo, class: 'col-sm-1 control-label' %>
    <div class="col-sm-2">
      <%= f.text_field :modelo, :class => 'form-control'  %>
      <%=f.error_span(:modelo) %>
    </div>
  </div>
  <div class="form-group section-patrimonio">
    <%= f.label :numero_serie, class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :numero_serie, :class => 'form-control'  %>
      <%=f.error_span(:numero_serie) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :detalhamento, class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :detalhamento, :class => 'form-control'  %>
      <%=f.error_span(:detalhamento) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :observacao, class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :observacao, :class => 'form-control'  %>
      <%=f.error_span(:observacao) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :valor, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= f.text_field :valor, :class => 'form-control'  %>
      <%=f.error_span(:valor) %>
    </div>
    <%= f.label :nota_fiscal, class: 'col-sm-1 control-label' %>
    <div class="col-sm-2">
      <%= f.text_field :nota_fiscal, :class => 'form-control'  %>
      <%=f.error_span(:nota_fiscal) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :data_compra, class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :data_compra, value: bem.data_compra.try(:strftime, '%d/%m/%Y'), :class => 'form-control datepicker'  %>
      <%=f.error_span(:data_compra) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :situacao_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.select :situacao_id, Situacao.to_dropdown, { include_blank: true }, {:class => 'form-control'}  %>
      <%=f.error_span(:situacao_id) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estado_conservacao_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
    <%= f.select :estado_conservacao_id, EstadoConservacao.to_dropdown, { include_blank: true }, {:class => 'form-control'} %>
      <%=f.error_span(:estado_conservacao_id) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :centro_custo_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= f.select :centro_custo_id, CentroCusto.to_dropdown, { include_blank: true }, {:class => 'form-control'}  %>
      <%=f.error_span(:centro_custo_id) %>
    </div>
    <%= f.label :setor_id, class: 'col-sm-1 control-label' %>
    <div class="col-sm-2">
      <%= f.select :setor_id, Setor.to_dropdown, { include_blank: true }, {:class => 'form-control'}  %>
      <%=f.error_span(:setor_id) %>
    </div>

  </div>
  <div class="form-group">
    <%= f.label :colaborador_id, 'Responsável Inicial', class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.select :colaborador_id, Colaborador.to_dropdown, { include_blank: true }, {:class => 'form-control'}  %>
      <%=f.error_span(:colaborador_id) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to I18n.t('.cancel', default: I18n.t("helpers.links.cancel")),
                  bens_path, class: 'btn' %>
    </div>
  </div>
<% end %>
<script type="text/javascript">

</script>
