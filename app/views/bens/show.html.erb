<div class="page-header">
  <h3>Item</h3>
</div>
<dl class="dl-horizontal">
    <dt><strong>Grupo insumo:</strong></dt>
  <dd><%= @bem.grupo_insumo.try(:descricao)  %></dd>
    <dt><strong>Insumo:</strong></dt>
  <dd><%= @bem.insumo.try(:descricao)  %></dd>
    <dt><strong>Marca:</strong></dt>
  <dd><%= @bem.marca %></dd>
    <dt><strong>Modelo:</strong></dt>
  <dd><%= @bem.modelo %></dd>
    <dt><strong>Numero serie:</strong></dt>
  <dd><%= @bem.numero_serie %></dd>
    <dt><strong>Detalhamento:</strong></dt>
  <dd><%= @bem.detalhamento %></dd>
    <dt><strong>Observacao:</strong></dt>
  <dd><%= @bem.observacao %></dd>
    <dt><strong>Valor:</strong></dt>
  <dd><%= @bem.valor %></dd>
    <dt><strong>Nota fiscal:</strong></dt>
  <dd><%= @bem.nota_fiscal %></dd>
    <dt><strong>Data compra:</strong></dt>
  <dd><%= @bem.data_compra %></dd>
    <dt><strong>Situacao:</strong></dt>
  <dd><%= @bem.situacao.try(:descricao) %></dd>
    <dt><strong>Estado conservacao:</strong></dt>
  <dd><%= @bem.estado_conservacao.try(:descricao)  %></dd>
    <dt><strong>Centro custo:</strong></dt>
  <dd><%= @bem.centro_custo.try(:descricao) %></dd>
    <dt><strong>Setor:</strong></dt>
  <dd><%= @bem.setor.try(:descricao) %></dd>
    <dt><strong>Tipo bem:</strong></dt>
  <dd><%= @bem.tipo_bem.try(:descricao) %></dd>
  </dl>
<div class="form-actions">
  <%= link_to I18n.t('.back', default: t("helpers.links.back")),
              bens_path, class: 'btn'  %>
  <%= link_to I18n.t('.edit', default: t("helpers.links.edit")),
              edit_bem_path(@bem), class: 'btn' %>
  <%= link_to I18n.t('.destroy', default: t("helpers.links.destroy")),
              bem_path(@bem),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Tem certeza que deseja remover o registro?')) },
              class: 'btn btn-danger' %>
</div>
