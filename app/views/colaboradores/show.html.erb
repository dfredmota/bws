<div class="page-header">
  <h3><%= I18n.t('.title', default: @colaborador.class.model_name.human ) %></h3>
</div>
<dl class="dl-horizontal">
    <dt><strong>Nome:</strong></dt>
  <dd><%= @colaborador.nome %></dd>
    <dt><strong>Cpf:</strong></dt>
  <dd><%= @colaborador.cpf %></dd>
    <dt><strong>Data nascimento:</strong></dt>
  <dd><%= @colaborador.data_nascimento.try(:to_date).try(:strftime, '%d/%m/%Y') %></dd>
    <dt><strong>Funcao:</strong></dt>
  <dd><%= @colaborador.funcao.descricao %></dd>
    <dt><strong>Data admissao:</strong></dt>
  <dd><%= @colaborador.data_admissao.try(:strftime, '%d/%m/%Y') %></dd>
  <% if @colaborador.data_demissao %>
  <dt><strong>Data demissao:</strong></dt>
  <dd><%= @colaborador.data_demissao.try(:strftime, '%d/%m/%Y') %></dd>
  <% end %>
  <dt><strong>Telefones:</strong></dt>
  <dd>
    <% @colaborador.telefones.each do |telefone| %>
      <%= "#{telefone.ddd} #{telefone.numero} / " %>
    <% end %>
  </dd>
  </dl>
<div class="form-actions">
  <%= link_to I18n.t('.back', default: t("helpers.links.back")),
              colaboradores_path, class: 'btn'  %>
  <%= link_to I18n.t('.edit', default: t("helpers.links.edit")),
              edit_colaborador_path(@colaborador), class: 'btn' %>
  <%= link_to I18n.t('.destroy', default: t("helpers.links.destroy")),
              colaborador_path(@colaborador),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Tem certeza que deseja remover o registro?')) },
              class: 'btn btn-danger' %>
</div>
